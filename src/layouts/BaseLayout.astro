---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    {Astro.slots.has('title')
      ? <slot name="title" />
      : <title>DoubleDown Branding</title>
    }

    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <meta name="theme-color" content="#0D1A5A" />

    <link rel="stylesheet" href="/styles/global.css" />
  </head>

  <body style="font-family: 'Gotham', sans-serif; margin: 0; padding: 0; background: var(--paper);">
    <style>
      :root {
        --ink: #0D1A5A;
        --paper: #f6e4cc;
        --accent: #ef3741;
      }
      /* Page shell so footer stays at the bottom on short pages */
      body {
        min-height: 100vh;
        display: grid;
        grid-template-rows: auto 1fr auto;
      }
      img { display: block; max-width: 100%; height: auto; }

      /* Keep content clear of fixed header */
      main { padding-top: var(--header-h-desktop); }

      /* Match Header.astro breakpoint; allow for 2-line nav on larger phones/tablets */
      @media (max-width: 1100px) {
        main { padding-top: clamp(250px, 18vw, 300px); }
      }
    </style>

    <Header />

    <main id="main" role="main" tabindex="-1">
      <slot />
    </main>

    <Footer />
  </body>
</html>
