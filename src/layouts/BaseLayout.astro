---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Page title (uses named slot if provided, otherwise brand fallback) -->
    {Astro.slots.has('title')
      ? <title><slot name="title" /> | DoubleDown Branding</title>
      : <title>DoubleDown Branding</title>
    }

    <!-- Favicons -->
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <meta name="theme-color" content="#0D1A5A" />

    <!-- Global styles -->
    <link rel="stylesheet" href="/styles/global.css" />
  </head>

  <body style="font-family: 'Gotham', sans-serif; background-color: #64615eff; margin: 0; padding: 0;">
    <style>
      :root {
        --ink: #0D1A5A;
        --paper: #f6e4cc;
        --accent: #ef3741;
      }
      /* Page shell so footer stays at the bottom on short pages */
      body {
        min-height: 100vh;
        display: grid;
        grid-template-rows: auto 1fr auto;
      }
      /* Avoid image layout shifts */
      img { display: block; max-width: 100%; height: auto; }

      /* Keep content clear of fixed header */
      main { padding-top: var(--header-h-desktop); }
      @media (max-width: 768px) {
        main { padding-top: 120px; }
      }
    </style>

    <Header />

    <!-- Main content -->
    <main id="main" role="main" tabindex="-1">
      <slot />
    </main>

    <Footer />
  </body>
</html>
