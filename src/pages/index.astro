---
import BaseLayout from '../layouts/BaseLayout.astro';

import HeroSlider from '../components/HeroSlider.astro';
import ClientSlider from '../components/ClientSlider.astro';
import ServicesSection from '../components/ServicesSection.astro';
import SocialIcons from '../components/SocialIcons.astro';
import CtaSplitSection from '../components/CtaSplitSection.astro';

import { getEntryBySlug } from 'astro:content';

const content = await getEntryBySlug('homepage', 'homepage');
if (!content) {
  throw new Error('Homepage content not found.');
}
const { headline, cta } = content.data;
---

<BaseLayout>
  <title slot="title">DoubleDown Branding — Strategic Branding & Visual Systems</title>
  <!-- ✅ Canonical for homepage -->
  <link slot="head" rel="canonical" href="https://doubledownbranding.com/" />

  <!-- Hero -->
  <HeroSlider ctaText={cta} />

  <!-- Services -->
  <ServicesSection />

  <!-- Client Logos -->
  <ClientSlider />

  <!-- Split CTA -->
  <CtaSplitSection />

  <!-- Social Icons -->
  <SocialIcons />
</BaseLayout>
