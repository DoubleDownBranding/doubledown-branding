---
import HeroSlider from '../components/HeroSlider.astro';
import ClientSlider from '../components/ClientSlider.astro';
import ServicesSection from '../components/ServicesSection.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SocialIcons from '../components/SocialIcons.astro';
import CtaSplitSection from '../components/CtaSplitSection.astro'; // ✅ Correct name
import { getEntryBySlug } from 'astro:content';

const content = await getEntryBySlug('homepage', 'homepage');
if (!content) {
  throw new Error('Homepage content not found.');
}
const { headline, cta } = content.data;
---

<style>
  body {
    font-family: 'Gotham', sans-serif;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
  }
</style>

<Header />

<!-- ✅ Hero section -->
<HeroSlider ctaText={cta} />

<!-- ✅ Services Section -->
<ServicesSection />

<!-- ✅ Client Logos -->
<ClientSlider />

<!-- ✅ Split CTA Section (Picture + Text) -->
<CtaSplitSection />

<!-- ✅ Social Icons Section -->
<SocialIcons />

<!-- ✅ Footer -->
<Footer />
