<style>
  /* Shell */
  .client-section {
    display: grid;
    grid-template-columns: auto 1fr;
    align-items: stretch;
    background-color: #f5e8d3;
    height: 140px;                 /* desktop height */
    overflow: hidden;
    border-top: 1px solid #0D1A5A;
  }

  /* Title block */
  .client-title {
    background-color: #0D1A5A;
    color: #f6e4cc;
    font-weight: bold;
    font-family: 'Gotham', sans-serif;
    text-align: left;

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    height: 100%;
    padding: 0 5rem;              /* a bit tighter than 7rem */
    line-height: 1;
    z-index: 2;
    position: relative;

    font-size: clamp(1.6rem, 3.2vw, 3rem);  /* responsive type */
  }

  /* Slider area */
  .slider-wrapper { overflow: hidden; width: 100%; position: relative; }
  .slider-track {
    display: flex;
    height: 100%;
    animation: slide-left 50s linear infinite; /* desktop speed */
  }

  /* Pause on hover for pointer devices only */
  @media (hover: hover) and (pointer: fine) {
    .slider-track:hover { animation-play-state: paused; }
  }

  /* Respect reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .slider-track { animation: none; transform: none; }
  }

  /* Logo tiles */
  .logo-box {
    min-width: 220px;             /* desktop spacing */
    height: 100%;
    background-color: #f6e4cc;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0;
  }
  .logo-box img {
    max-width: 80%;
    max-height: 70%;
    object-fit: contain;
    display: block;
  }

  /* Mobile/tablet adjustments */
  @media (max-width: 1100px) {
    .client-section {
      grid-template-columns: 1fr; /* stack */
      height: auto;               /* let content define height */
    }

    .client-title {
      height: auto;
      padding: 1rem 1.25rem;
      text-align: center;
      font-size: clamp(2rem, 5vw, 2rem);
      border-bottom: 1px solid #0D1A5A;
    }

    .slider-wrapper {
      height: 120px;               /* compact marquee track on mobile */
    }

    .slider-track {
      animation: slide-left 65s linear infinite; /* slightly slower on mobile */
    }

    .logo-box {
      min-width: 160px;           /* tighter spacing on small screens */
    }
    .logo-box img {
      max-width: 78%;
      max-height: 60%;
    }
  }

  @keyframes slide-left {
    0%   { transform: translateX(0%); }
    100% { transform: translateX(-50%); }
  }
</style>

<div class="client-section" aria-label="Client logos">
  <div class="client-title">OUR<br />CLIENTS</div>

  <div class="slider-wrapper">
    <div class="slider-track" aria-hidden="false">
      {Array.from({ length: 2 }).map((_, i) => (
        <div aria-hidden={i === 1 ? 'true' : 'false'} style="display:flex;">
          <div class="logo-box"><img src="/images/uploads/clientlogo1.png" alt="Client logo 1" loading="lazy" /></div>
          <div class="logo-box"><img src="/images/uploads/clientlogo2.png" alt="Client logo 2" loading="lazy" /></div>
          <div class="logo-box"><img src="/images/uploads/clientlogo3.png" alt="Client logo 3" loading="lazy" /></div>
          <div class="logo-box"><img src="/images/uploads/clientlogo4.png" alt="Client logo 4" loading="lazy" /></div>
          <div class="logo-box"><img src="/images/uploads/clientlogo5.png" alt="Client logo 5" loading="lazy" /></div>
          <div class="logo-box"><img src="/images/uploads/clientlogo6.png" alt="Client logo 6" loading="lazy" /></div>
          <div class="logo-box"><img src="/images/uploads/clientlogo7.png" alt="Client logo 7" loading="lazy" /></div>
          <div class="logo-box"><img src="/images/uploads/clientlogo8.png" alt="Client logo 8" loading="lazy" /></div>
        </div>
      ))}
    </div>
  </div>
</div>
